<div class="results-block">
<%= render 'layouts/message' %>
</div>


<% if @friends %>
<div class="card card-header results-block">
 <table class="col-md-12">
  <tbody>
    <% @friends.each do |friend| %>
      <tr>
       <td><strong>Name : </strong> <%= friend.full_name %> </td>
       <td><strong>Email : </strong> <%= friend.email %> </td>
       <td><strong>Actions : </strong> <%= link_to 'View Profil', '#', class: "btn btn-sm btn-success"%></td>
      
       <td><strong><%= link_to 'Follow friend?', '#', class:"btn btn-sm btn-success", method: :post %></strong></td>
      </tr>
    <% end %>
  
  </tbody>
 </table>
</div>
<% end %>

