<div class="results-block">
<%= render 'layouts/message' %>
</div>


<% if @friends %>
<div class="card card-header results-block">
 <table class="col-md-12">
  <tbody>
    <% @friends.each do |friend| %>
      <tr>
       <td><strong>Name : </strong> <%= friend.full_name %> </td>
       <td><strong>Email : </strong> <%= friend.email %> </td>
       <td>
        <strong>Actions : </strong> <%= link_to 'View Profil', user_path(friend), class: "btn btn-sm btn-success"%>
         <% if current_user.not_friend_with?(friend.id)%>
           <strong><%= link_to 'Follow friend?', friendships_path(friend: friend), class:"btn btn-sm btn-success", method: :post %></strong>
         <% else %>
           <span class="badge badge-secondary"> we are friends </span>
         <% end %>
       </td>
      </tr>
    <% end %>
  
  </tbody>
 </table>
</div>
<% end %>

